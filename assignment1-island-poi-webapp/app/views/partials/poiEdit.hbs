<form action="/editPOI/{{poi._id}}" method="POST">
    <div class="uk-margin">
        <div class="uk-inline uk-width-1-1">
            <label class="uk-form-label" for="form-stacked-text">Name</label>
            <input class="uk-input uk-form-small" type="text" name="name" value="{{poi.name}}">
        </div>
    </div>
    <div class="uk-margin">
        <div class="uk-inline uk-width-1-1">
            <label class="uk-form-label" for="form-stacked-text">Description</label>
            <input class="uk-input uk-form-small" type="text" name="description" value="{{poi.description}}">
        </div>
    </div>
    <div class="uk-margin">
        <p>{{poi._id}}</p>
    </div>
    <div class="uk-inline uk-width-1-1">
        <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Change</button>
    </div>
</form>
{{> error }}