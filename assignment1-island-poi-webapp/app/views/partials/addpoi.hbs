<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <form class="uk-form-stacked uk-text-left" action="/addPOI" method="POST">
    <div class="uk-grid uk-grid-stack">
      <div class="uk-width-1-1">
        <div class="uk-margin">
          <label class="uk-form-label" for="form-stacked-text">Add New POI</label>
          <div class="uk-inline uk-width-1-1">
              <label class="uk-form-label" for="form-stacked-text">Name</label>
              <input class="uk-input uk-form-small" type="text" name="name" placeholder="Name">
          </div>
          <div class="uk-inline uk-width-1-1">
              <label class="uk-form-label" for="form-stacked-text">Description</label>
              <input class="uk-input uk-form-small" type="text" name="description" placeholder="Description">
          </div>
          <div class="uk-inline uk-width-1-1">
              <label class="uk-form-label" for="form-stacked-text">Latitude</label>
              <input class="uk-input uk-form-small" type="decimal" name="latitude" placeholder="0.0">
          </div>
          <div class="uk-inline uk-width-1-1">
              <label class="uk-form-label" for="form-stacked-text">Longitude</label>
              <input class="uk-input uk-form-small" type="decimal" name="longitude" placeholder="0.0">
          </div>
          <div class="uk-margin uk-width-1-1">
                <label class="uk-form-label" for="form-stacked-text">Category</label>
                <div class="uk-form-controls ">
                    {{#each category }}
                        <label> <input class="uk-radio" type="radio" name="category" value="{{name}}">
                            {{name}}
                        </label> <br>
                    {{/each}}
                </div>
          </div>
          <div class="uk-inline uk-width-1-1">
              <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add POI</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
