<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <table class="uk-table">
        <h1 class="uk-heading-small">
            Users
        </h1>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th></th>
        </thead>
        <tbody class="uk-text-left">
        {{#each user}}
            <tr>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{email}}</td>
                <td>
                    <a href="/deleteUser/{{_id}}" class="uk-card uk-card-small uk-card-hover uk-padding-small">
                        <i class="fas fa-trash fa-3x" style="color:rgb(248,0,0)" title="Delete {{_id}}" pos="bottom" uk-tooltip></i>
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>